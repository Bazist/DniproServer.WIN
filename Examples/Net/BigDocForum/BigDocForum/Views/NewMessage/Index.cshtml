@model BigDocForum.Models.Message
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>BigDoc Forum</title>
</head>
<body>
    @using (Html.BeginForm("send", "NewMessage", FormMethod.Post))
    {
        <input type="hidden" name="articleID" value="@Model.ArticleID" />
        <center>
            <table border="1" style="width:1000px;">
                <tr>
                    <td>
                        Author:    
                    </td>
                    <td>
                        <input type="text" name="author" style="width: 50%" value="@Model.Author" />
                    </td>
                </tr>
                <tr>
                    <td>
                        Text:    
                    </td>
                    <td>
                        <input type="text" name="text" style="width: 50%" value="@Model.Text" />
                    </td>
                </tr>
                <tr>
                    <td colspan="4" align=right>
                        <input type="submit" name="btn" style="width: 50%" value="Добавить новое сообщение" />
                    </td>
                </tr>
            </table>
        </center>
    }
</body>
</html>
